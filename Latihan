    function fahrenheitToCelcius (uint fahrenheit) public pure returns(uint) {
        uint toCelcius = (fahrenheit - 32) * 5/9;
        return toCelcius;
    }

    function celciusToFahrenheit (uint celcius) public pure returns(uint) {
        uint toFahrenheit = (celcius * 9/5) + 32;
        return toFahrenheit;
    }
}
